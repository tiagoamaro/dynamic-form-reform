<div class="container">
  <% if flash[:notice] %>
      <div class="alert alert-success" role="alert"><%= flash[:notice] %></div>
  <% end %>

  <h2>Cities</h2>

  <%= link_to 'Create City (Rails Form)', new_city_path(variant: :rails), class: 'btn btn-success' %>
  <%= link_to 'Create City (React Form)', new_city_path(variant: :react), class: 'btn btn-success' %>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>State</th>
        <th>Country</th>
      </tr>
    </thead>

    <% @cities.each do |city| %>
        <tr>
          <td><%= city.name %></td>
          <td><%= city.state.name %></td>
          <td><%= city.state.country.name %></td>
        </tr>
    <% end %>
  </table>

  <%= link_to 'Destroy All Cities', destroy_all_cities_path, class: 'btn btn-danger', data: { method: :delete } %>
</div>
