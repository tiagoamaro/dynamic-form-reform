<%= simple_form_for @form, url: states_path, html: { class: 'create-state-form' } do |f| %>
    <%= f.input :zone_id, collection: f.object.zone_options, include_blank: false %>
    <%= f.input :country_id, collection: f.object.country_options, include_blank: false %>
    <%= f.input :name, placeholder: 'State Name', label: 'State Name' %>
    <%= f.button :submit, value: 'Submit', class: 'btn btn-primary' %>
    <%= link_to 'Cancel', states_path, class: 'btn btn-default' %>
<% end %>


<script type="text/javascript">
  (function ($) {
    var $form         = $('.create-state-form');
    var $statesSelect = $("#states_create_zone_id");
    var newStatePath  = "<%= new_state_path %>";

    $statesSelect.on("change", function () {
      var targetUrl = newStatePath + "?" + $form.serialize();
      window.location = targetUrl;
    })
  })(jQuery);
</script>

