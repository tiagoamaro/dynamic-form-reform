<div class="container">
  <% if flash[:notice] %>
      <div class="alert alert-success" role="alert"><%= flash[:notice] %></div>
  <% end %>

  <h2>States</h2>

  <%= link_to 'Create State', new_state_path, class: 'btn btn-success' %>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Country</th>
      </tr>
    </thead>

    <% @states.each do |state| %>
        <tr>
          <td><%= state.name %></td>
          <td><%= state.country.name %></td>
        </tr>
    <% end %>
  </table>

  <%= link_to 'Destroy All States', destroy_all_states_path, class: 'btn btn-danger', data: { method: :delete } %>
</div>
